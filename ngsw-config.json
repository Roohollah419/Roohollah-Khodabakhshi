{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    },
    {
      "name": "media",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/media/**",
          "/assets/image/**"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "external-fonts",
      "urls": [
        "https://fonts.googleapis.com/**",
        "https://fonts.gstatic.com/**"
      ],
      "cacheConfig": {
        "maxSize": 20,
        "maxAge": "30d",
        "strategy": "freshness",
        "timeout": "3s"
      }
    },
    {
      "name": "cdn-resources",
      "urls": [
        "https://cdn.jsdelivr.net/**"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "7d",
        "strategy": "freshness",
        "timeout": "3s"
      }
    }
  ]
}
